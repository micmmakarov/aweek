


<%= form_for(@post) do |f| %>




<div class=title>Article title</div><%= f.text_field :title, :class => 'input' %><div class=clear></div>
<div class=title>Organisation</div><%= select_tag 'post[organisation_id]', options_from_collection_for_select(@organisations, :id, :name), :class => 'input' %><div class=clear></div>


<div class=title>article</div><%= f.text_area :content %>
	<div class=images>
        <%= f.fields_for :attachments do |attachment| %>
			<% if attachment.object.new_record? %>
				<%= attachment.file_field :pic %><br>
				<!-- <div>Image 4</div><input type=button value="Coose file"><div class=status>No file chosen</div><div class=clear></div> -->
			<% end %>
		<% end %>
		<a class=preview>Preview</a><%= f.submit :class => 'post-button' %><div class=clear></div>
	</div>


<div class=clear></div> 





<div class=title>tags</div><input type=text class=tags placeholder="Title here, bro!"><div class=save><a href="#">Save</a><a href="#">Delete</a><a class=close href="#">Close Window</a></div><div class=clear></div>


  <% end %>
  

