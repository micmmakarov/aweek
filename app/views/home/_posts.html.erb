<!-- FEED HERE! -->
			<div class="content">

<% @posts.each do |post| %>
	
                <!-- Post Start-->
                <a class=nothing href='<%= url_for(post) %>'>
                <div class="post clearfix">
                    <img src="images/post-icon.jpg" class="alignleft" alt="" />
                    <div class="desc">
                        <p class="postmetadata"><strong><%= post.organisation.name %></strong> · Oct 20, 2011 · <small>10:33pm</small></p>
                        <div class="category">
							<%= post.category.name %>
						</div>
                        <div class="postcontent">
                            <p><%= post.title %></p>
                        </div>
						
						<% if post.attachments.length == 1 then %>
							<% post.attachments.each do |attachment| %>
								<%= image_tag attachment.pic.url(:medium) %>
							<% end %>
						<% else %>
							<% post.attachments.each do |attachment| %>
								<%= image_tag attachment.pic.url(:thumb) %>
							<% end %>
						<% end %>

                    </div>
                </div>
                </a>
                
     

<% end %>
             </div>













