<script type="text/javascript" src="/assets/jquery.simplyscroll.min.js"></script>
  <%= stylesheet_link_tag    "jquery.simplyscroll", :media => 'screen,projection' %>


<script>


$(document).ready(function () {

	$("#items").simplyScroll({
		autoMode: 'loop',
		pauseOnHover: true,
		frameRate: 20,
		speed: 1
			});	

	
	$(".slide-pic").hover(function () {
		$(this).find("span").stop().animate({bottom: '0px'});
		
	},function () {
		
		$(this).find("span").stop().animate({bottom: '-80px'});
		
	});

	
	
});
</script>
<style>
.slide-pic {
position:relative;
overflow:hidden;
display:block;
box-shadow: inset 3px 3px 7px rgba(0,0,0,0.3), 1px 1px 1px rgba(0,0,0,0.5);	
}
#items li span {
width:160px;
padding: 5px 10px;
left:0px;
/* display:none; */
background:rgba(180,16,32,0.9);
bottom:-80px;
position:absolute;
z-index: 9999;	
border-bottom-left-radius:20px;
border-bottom-right-radius:20px;
}

</style>

 <div id="featured">

			
 
		<ul id="items">
		<% @randoms.each do |attachment| %>

		<% if attachment.post then %>
			<% url = url_for attachment.post %>
			<% views = attachment.post.views %>
			<% title = attachment.post.title.slice(0..30) %>
			<% background = "background:rgba(180,16,32,0.9);" %>
		<% end %>
		<% if attachment.event then %>
			<% url = url_for attachment.event %>
			<% views = attachment.event.views %>
			<% title = attachment.event.title.slice(0..30) %>
			<% background = "background:rgba(180,103,0,0.9);" %>
		<% end %>
		
		<% if views then %>
		
			<% views = views.to_s + " views" %>
		
		<% else %>
		
			<% views = "No views yet" %>
		
		<% end %>
		
			<li>
                <a class=slide-pic2 href="<%= url %>"><div class=slide-pic style="background:url('<%= attachment.pic.url(:slide) %>');">
				<span style="<%= background %>"><strong>
				
				<%= title %>...
				
				</strong><em>
				

					<%= views %>

				</em><div class="likes">15 likes</div></span>
				</div>
                
                </a>
            </li>
		<% end %>
        </ul>
        <div class="clrflt"></div>
    </div>

</div>