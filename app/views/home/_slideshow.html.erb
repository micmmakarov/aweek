<script type="text/javascript" src="/assets/jquery.simplyscroll.min.js"></script>
  <%= stylesheet_link_tag    "jquery.simplyscroll", :media => 'screen,projection' %>


<script>


$(document).ready(function () {

	$("#items").simplyScroll({
		autoMode: 'loop',
		pauseOnHover: true,
		frameRate: 20,
		speed: 1
			});	

	
	$(".slide-pic").hover(function () {
		$(this).find("span").stop().animate({bottom: '0px'});
		
	},function () {
		
		$(this).find("span").stop().animate({bottom: '-80px'});
		
	});

	
	
});
</script>
<style>
.slide-pic {
position:relative;
overflow:hidden;
display:block;
box-shadow: inset 3px 3px 4px rgba(0,0,0,0.3), 1px 1px 2px rgba(0,0,0,0.5);	
}
#items li span {
width:160px;
padding: 5px 10px;
left:0px;
/* display:none; */
background:rgba(180,16,32,0.9);
bottom:-80px;
position:absolute;
z-index: 9999;	
border-bottom-left-radius:20px;
border-bottom-right-radius:20px;
}

</style>

 <div id="featured">

			
 
		<ul id="items">
		<% @randoms.each do |attachment| %>
        	<li>
                <a class=slide-pic2 href="#"><div class=slide-pic style="background:url('<%= attachment.pic.url(:slide) %>');">
				<span><strong>
				<% if attachment.post then %>
				<%= attachment.post.title.slice(0..30) %>...
				<% else %>
					no views yet
				<% end %> 
				
				</strong><em>
				
				<% if attachment.post then %>
					<%= attachment.post.views %> views
				<% else %>
					no views yet
				<% end %> 
				</em><div class="likes">15 likes</div></span>
				</div>
                
                </a>
            </li>
		<% end %>
        </ul>
        <div class="clrflt"></div>
    </div>

</div>